<clickhouse>
    <remote_servers>
        <{{ cluster_name }}>
        <replica>
            <host>{{ ansible_fqdn }}</host>
            <port>9440</port>
        </replica>
        <replica>
            <host>{{ remote_server_hostname }}</host>
            <port>9440</port>
        </replica>
        </{{ cluster_name }}>
    </remote_servers>
    <keeper_server>
        <tcp_port>9181</tcp_port>
        <tcp_port_secure>9444</tcp_port_secure>
        <server_id>1</server_id>
        <coordination_settings>
        <operation_timeout_ms>10000</operation_timeout_ms>
        </coordination_settings>
        <raft_configuration>
        <server>
            <id>1</id>
            <hostname>{{ ansible_fqdn }}</hostname>
            <port>9444</port>
        </server>
        <server>
            <id>2</id>
            <hostname>{{ remote_server_hostname }}</hostname>
            <port>9444</port>
        </server>
        </raft_configuration>
    </keeper_server>
</clickhouse>