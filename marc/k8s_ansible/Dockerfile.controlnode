# Using Ubuntu as the base image
FROM ubuntu:latest

# Set environment variables
ENV ANSIBLE_HOST_KEY_CHECKING=False

# Install necessary packages
RUN apt-get update && \
    apt-get install -y \
    sudo \
    software-properties-common \
    ssh \
    sshpass \
    openssh-server && \
    apt-add-repository --yes --update ppa:ansible/ansible && \
    apt-get install -y ansible && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set root password
RUN echo 'root:password' | chpasswd

# Configure SSH to allow root login with password
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config && \
    sed -i 's/#PasswordAuthentication yes/PasswordAuthentication yes/' /etc/ssh/sshd_config

# Create ansible and grant sudo privileges
RUN useradd -m ansible && \
    echo 'ansible:password' | chpasswd && \
    usermod -aG sudo ansible && \
    echo 'ansible ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Set permissions on sudoers file to avoid potential issues
# RUN chmod 0440 /etc/sudoers.d/ansible

# Start SSH service and keep the container running
CMD service ssh start && sleep infinity
